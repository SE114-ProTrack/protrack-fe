<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/colorSecondary"
            android:orientation="vertical"
            android:paddingHorizontal="14dp"
            android:paddingTop="30dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:src="@drawable/ic_backward" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/searchButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="Search"
                    android:src="@drawable/ic_search" />

                <ImageButton
                    android:id="@+id/moreButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="5dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="See more"
                    android:src="@drawable/ic_more" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/avatarContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp">

                </FrameLayout>

                <TextView
                    android:id="@+id/moreMemberCount"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:backgroundTint="#FF8A00"
                    android:gravity="center"
                    android:text="+4"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="18dp"
                android:paddingVertical="18dp"
                android:background="@color/colorSurface">

                <TextView
                    android:id="@+id/projectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Project"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="40sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Making a project management Android app for SE332. "
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textFontWeight="400"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="?attr/colorSurface"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="18dp"
                        android:progress="50"
                        android:progressDrawable="@drawable/bg_progress_bar" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:background="?attr/colorSurface"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/completedTask"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totalTask"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/48 tasks"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/dayLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="10 days left, 10/01/2025"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:textFontWeight="400"
                    android:textSize="15sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/taskTab"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorOnPrimary"
                android:gravity="center"
                android:background="@drawable/bg_contained_14"
                android:text="Task" />

            <TextView
                android:id="@+id/memberTab"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:alpha="0.5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:gravity="center"
                android:background="@drawable/bg_transparent"
                android:text="Member"/>
        </LinearLayout>

        <!-- Content -->
        <FrameLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"/>

    </LinearLayout>
</ScrollView>
