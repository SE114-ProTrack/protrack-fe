<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="14dp"
        android:paddingVertical="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!-- Back icon -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:scaleType="centerInside"
                android:src="@drawable/ic_backward" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Reset Password"
                android:textColor="?attr/colorPrimary"
                android:textSize="23sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="36dp"
            android:lineSpacingExtra="4dp"
            android:text="Enter\nyour OTP"
            android:textColor="?attr/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:text="Enter the OTP we just sent to your phone"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/otp_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/otp1"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_contained_18"
                android:backgroundTint="?attr/colorSurface"
                android:elevation="2dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/otp2"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_contained_18"
                android:backgroundTint="?attr/colorSurface"
                android:elevation="2dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/otp3"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_contained_18"
                android:backgroundTint="?attr/colorSurface"
                android:elevation="2dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/otp4"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_contained_18"
                android:backgroundTint="?attr/colorSurface"
                android:elevation="2dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/otp5"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_contained_18"
                android:backgroundTint="?attr/colorSurface"
                android:elevation="2dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Copy tương tự cho otp2, otp3, otp4, otp5 -->

        </LinearLayout>

        <!-- Continue button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="?attr/colorPrimary"
            android:text="Continue"
            android:textColor="?attr/colorOnPrimary"
            app:cornerRadius="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resent OTP in "
                android:textColor="@color/colorOnSurfaceVariant"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtTimeRemain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30s"
                android:textColor="@color/colorSecondaryVariant"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>