        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Left Icon (comment_orange_icon) -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                app:tint="#F06307"

                android:src="@drawable/ic_cmt" />

            <!-- Center Text -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comments"
                android:textColor="#26495C"
                android:textStyle="bold"
                android:textSize="14sp" />

            <!-- Right Icon (chevron) -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:tint="#244960"
                android:src="@drawable/ic_chervonright" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:divider="@android:color/transparent"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cmt_expand"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/transparent"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="Expand"
            android:textColor="#26495C"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_expand"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#26495C"
            app:strokeColor="#26495C"
            app:strokeWidth="2dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:background="@android:color/white">

            <!-- Avatar bÃªn trÃ¡i -->
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_user"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_avatar_circle"
            android:clipToOutline="true" />

            <!-- Container input bo gÃ³c -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_comment_input"
                android:paddingStart="16dp"
                android:paddingEnd="18dp"
                android:paddingVertical="10dp">

                <!-- EditText nháº­p comment -->
                <EditText
                    android:id="@+id/comment_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Post a comment..."
                    android:background="@null"
                    android:textColor="#26495C"
                    android:textColorHint="#26495C"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:maxLines="3"
                    android:minLines="1"
                    android:paddingEnd="40dp" />

                <!-- Icon gá»­i comment -->
                <ImageButton
                    android:id="@+id/send_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_move"
                    android:background="@null"
                    android:contentDescription="Send"
                    app:tint="#26495C" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

