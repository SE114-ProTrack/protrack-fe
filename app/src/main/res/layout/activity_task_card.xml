<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="18dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/colorSurface"
        android:padding="18dp">

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_avatar_circle"
            android:backgroundTint="?attr/colorSecondary">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_task"
                app:tint="?attr/colorPrimaryVariant" />
        </FrameLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Project -->
            <TextView
                android:id="@+id/projectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Project"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <!-- Task name -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Wireframe - ProTrack"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Tag Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tag_design"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="3dp"
                        android:text="Design"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:backgroundTint="#F56416"
                        android:background="@drawable/bg_contained_18_ripple" />

                    <TextView
                        android:id="@+id/tag_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="3dp"
                        android:text="SE332"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:backgroundTint="#7FBFE1"
                        android:background="@drawable/bg_contained_18_ripple" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
