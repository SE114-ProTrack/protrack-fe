<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@color/colorSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="18dp"
            android:paddingHorizontal="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurface"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/projectName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mobile Project"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/avatarContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp">

                </FrameLayout>

                <TextView
                    android:id="@+id/moreMemberCount"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:backgroundTint="#FF8A00"
                    android:gravity="center"
                    android:text="+4"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Making a project mana... - Jan 1, 2025"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textFontWeight="400"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="?attr/colorSurface"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="18dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/bg_progress_bar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:background="?attr/colorSurface"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/completedTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/48 tasks"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/dayLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="10 days left"
                android:textColor="?attr/colorSecondaryVariant"
                android:textFontWeight="400"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
