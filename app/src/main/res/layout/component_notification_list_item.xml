<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Nền Delete (luôn nằm bên phải) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="17dp"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="79dp"
            android:layout_height="79dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            android:layout_gravity="end"
            android:foreground="?android:attr/selectableItemBackground">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:background="@color/colorSurface">

                <ImageButton
                    android:id="@+id/btn_delete_noti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"
                    android:backgroundTint="@color/colorOnPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:padding="8dp"
        >
        <!-- Card hiển thị nội dung chính -->
        <androidx.cardview.widget.CardView
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/noti_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            android:foreground="?android:attr/selectableItemBackground">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:id="@+id/member_container"
                android:background="@color/colorSurface"
                >
                <!-- Avatar -->
                <ImageView
                    android:id="@+id/img_user_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_user"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_avatar_circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_marginStart="12dp"
                    android:text="Tien Tom"
                    android:textAlignment="center"
                    android:textColor="#1A2E35"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"

                    app:layout_constraintBottom_toTopOf="@+id/txt_status_noti"
                    app:layout_constraintStart_toEndOf="@id/img_user_avatar" />

                <TextView
                    android:id="@+id/txt_status_noti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leave a comment"
                    android:textSize="13sp"
                    android:textColor="#A3A3B3"
                    app:layout_constraintStart_toEndOf="@+id/img_user_avatar"
                    app:layout_constraintTop_toBottomOf="@id/txt_name"
                    tools:ignore="MissingConstraints"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="7dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>
